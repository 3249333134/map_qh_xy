.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9999;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background-color: #ffffff;
  border-top: 1px solid #e6e6e6;
  box-sizing: border-box;
  padding-bottom: 0;
  height: 86px;
}

.tabbar-item {
  flex: 1;
  height: 56px;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icon {
  width: 24px;
  height: 24px;
}

.label {
  font-size: 12px;
  color: #7A7E83;
}

.active .label {
  color: #ffd700;
}

/* 中间发布按钮为正圆 */
.publish-item { position: relative; z-index: 10; }
.publish-item .label { display: none; }

.plus-wrapper {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  transform: translateY(-15px);
  background: radial-gradient(circle at 50% 40%, #ff8a3d 0%, #ff6b35 60%, #ff4757 100%);
  border: 3px solid #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(255, 71, 87, 0.3),
              0 2px 8px rgba(255, 107, 53, 0.2),
              0 0 20px rgba(247, 147, 30, 0.1),
              0 8px 32px rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.plus-sign { color: #fff; font-size: 32px; line-height: 1; }

@media screen and (max-width: 375px) {
  .plus-wrapper { width: 55px; height: 55px; transform: translateY(-12px); }
  .plus-sign { font-size: 28px; }
}

@media screen and (min-width: 414px) {
  .plus-wrapper { width: 65px; height: 65px; transform: translateY(-18px); }
  .plus-sign { font-size: 36px; }
}
