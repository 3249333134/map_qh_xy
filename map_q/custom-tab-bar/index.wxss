.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9999;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background-color: #ffffff;
  border-top: 1px solid #e6e6e6;
  box-sizing: border-box;
  padding-bottom: 0;
  height: 86px;
}

.tabbar-item {
  flex: 1;
  height: 56px;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icon {
  width: 24px;
  height: 24px;
}

.label {
  font-size: 12px;
  color: #7A7E83;
}

.active .label {
  color: #ffd700;
}