{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^ProfileSection$": "@/pages/my/components/ProfileSection.vue",
      "^ContentSection$": "@/pages/my/components/ContentSection.vue",
      "^LocationModule$": "@/pages/my/components/LocationModule.vue",
      "^DateModule$": "@/pages/my/components/DateModule.vue",
      "^FavoriteModule$": "@/pages/my/components/FavoriteModule.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/service/index",
      "style": {
        "navigationBarTitleText": "服务",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/message/index",
      "style": {
        "navigationBarTitleText": "消息",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/my/index",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationStyle": "custom",
        "navigationBarTextStyle": "black"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#ffd700",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页"
      },
      {
        "pagePath": "pages/service/index",
        "text": "服务"
      },
      {
        "pagePath": "pages/message/index",
        "text": "消息"
      },
      {
        "pagePath": "pages/my/index",
        "text": "我的"
      }
    ]
  }
}
